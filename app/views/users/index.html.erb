<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_or_microposts_content_start, placeholder: "search by name or microposts" %>
  <%= f.submit %>
<% end %>

<%= content_tag :table %>
<%= content_tag :th, sort_link(@q, :name) %>

<%= will_paginate %> 
  <ul class="users">
    <%= render @users %>
  </ul>
<%= will_paginate %>
